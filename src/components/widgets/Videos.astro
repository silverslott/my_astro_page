---

const {
  title = await Astro.slots.render('title'),
  highlight,
} = Astro.props;

---

<section class="relative bg-gradient-to-b from-fuchsia-200 to-blue-200 dark:from-blue-800 dark:to-fuchsia-600">
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="py-4 pt-8 sm:py-6 lg:py-8 lg:pt-12">
      {
        (title || highlight) && (
          <div class="mb-8 md:mx-auto text-center max-w-3xl">
            {highlight && (
              <p
                class="text-base text-slate-600 dark:text-white font-semibold tracking-wide uppercase"
                set:html={highlight}
              />
            )}
            {title && (
              <h2
                class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading"
                set:html={title}
            />
            )}
          </div>
        )
      }
    </div>
    <div class="px-2 py-2 grid grid-cols-2 max-sm:grid-cols-1 place-items-center">
      <iframe width="100%" height="100%" src="https://www.youtube.com/embed/1EDRkIBMVns?si=puNN6gtXtq48tZ0Z" 
        title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; 
        gyroscope; picture-in-picture; web-share" allowfullscreen class="mb-[80px] lg:h-[400px] md:w-4/5 md:h-4/5 max-sm:w-3/4 max-sm:h-3/4">
      </iframe>
      <iframe width="100%" height="100%" src="https://www.youtube.com/embed/Mk5nhClsfTA?si=kriDYmWWZilhrVHj" 
        title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; 
        gyroscope; picture-in-picture; web-share" allowfullscreen class="mb-[80px] lg:h-[400px] md:w-4/5 md:h-4/5 max-sm:w-3/4 max-sm:h-3/4">
    </iframe>
    </div>
  </div>
</section>
