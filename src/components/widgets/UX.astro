---

import { Picture } from '@astrojs/image/components';
import GroceryAppOne from '~/assets/images/grocery_list_app_1.png';
import GroceryAppTwo from '~/assets/images/grocery_list_app_2.png';
import GroceryAppThree from '~/assets/images/grocery_list_app_3.png';
import FrameOneLight from '~/assets/images/frame_1_light.png';
import FrameOneDark from '~/assets/images/frame_1_dark.png';
import FrameThreeLight from '~/assets/images/frame_3_light.png';
import FrameThreeDark from '~/assets/images/frame_3_dark.png';

const {
  title = await Astro.slots.render('title'),
  highlight,
} = Astro.props;

---

<section class="relative bg-gradient-to-b from-fuchsia-200 to-blue-200 dark:from-blue-800 dark:to-fuchsia-600">
  <div class="relative max-w-max mx-auto py-3 sm:px-6">
    <div class="py-4 pt-8 sm:py-6 lg:py-8 lg:pt-12">
      {
        (title || highlight) && (
          <div class="mb-8 md:mx-auto text-center max-w-3xl">
            {highlight && (
              <p
                class="text-base text-slate-600 dark:text-white font-semibold tracking-wide uppercase"
                set:html={highlight}
              />
            )}
            {title && (
              <h2
                class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading"
                set:html={title}
            />
            )}
          </div>
        )
      }
      <p class="text-center text-black text-xl dark:text-white">A grocery list app design I have been working on:</p>
    </div>
    <div class="py-6 flex place-items-center mb-6">
      <Picture
        class="mx-0 mr-[10px] dark:hidden md:mr-5 max-sm:mr-1"
        src={FrameOneLight}
        widths={[400, 768, 1024, 2040]}
        sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
        loading="eager"
        width={200}
        alt="Grocery App Frame One"
      />
      <Picture
        class="mx-0 mr-[10px] hidden dark:block md:mr-5 max-sm:mr-1"
        src={FrameOneDark}
        widths={[400, 768, 1024, 2040]}
        sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
        loading="eager"
        width={200}
        alt=""
      />
      <Picture
        class="mx-0 mr-[50px] md:mr-5 max-sm:mr-1"
        src={GroceryAppOne}
        widths={[400, 768, 1024, 2040]}
        sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
        loading="eager"
        width={200}
        alt="Grocery App Frame One"
      />
      <Picture
        class="mx-0 mr-[50px] md:mr-5 max-sm:mr-1"
        src={GroceryAppTwo}
        widths={[400, 768, 1024, 2040]}
        sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
        loading="eager"
        width={200}
        alt="Grocery App Frame Two"
      />
      <Picture
        class="mx-0 mr-[10px] md:mr-5 max-sm:mr-1"
        src={GroceryAppThree}
        widths={[400, 768, 1024, 2040]}
        sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
        loading="eager"
        width={200}
        alt="Grocery App Frame Three"
      />
      <Picture
        class="mx-0 block dark:hidden max-sm:hidden"
        src={FrameThreeLight}
        widths={[400, 768, 1024, 2040]}
        sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
        loading="eager"
        width={200}
        alt=""
      />
      <Picture
        class="mx-0 hidden dark:block max-sm:hidden"
        src={FrameThreeDark}
        widths={[400, 768, 1024, 2040]}
        sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
        loading="eager"
        width={200}
        alt=""
      />
    </div>
  </div>
</section>
